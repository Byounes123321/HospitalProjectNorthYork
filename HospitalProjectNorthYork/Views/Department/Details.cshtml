@model HospitalProjectNorthYork.Models.ViewModels.DepartmentDetails
@{
    ViewBag.Title = "Details";
}
<a href="/Department/Edit/@Model.SelectedDepartment.Department_ID">EDIT</a>
<a href="/Department/DeleteConfirm/@Model.SelectedDepartment.Department_ID" style="color:red"><strong>DELETE</strong></a>
<a href="/Department/list">Back to list</a>
<h2>@Model.SelectedDepartment.DepartmentName details</h2>
<p>Desc: @Model.SelectedDepartment.DepartmentDesc</p>



<div class="col-md-6 col-sm-12">
    <h4>FAQs for @Model.SelectedDepartment.DepartmentName:</h4>
    @foreach (var f in Model.RelatedFAQs)
    {

        <a href="/FAQ/Details/@f.Faq_ID">@f.Ques @f.Answer</a>

        <a style="color:#ab2020;" href="/Department/UnassociateFAQ/@Model.SelectedDepartment.Department_ID?FAQ_ID=@f.Faq_ID">[x]</a>
        <br />
    }

    <div>

        <form method="POST" action="/Department/AssociateFAQ/@Model.SelectedDepartment.Department_ID">
            <select name="FAQ_ID">
                q
                <option value="">Select FAQ</option>
                @foreach (var f in Model.UnrelatedFAQs)
                {
                    <option value="@f.Faq_ID">@f.Ques @f.Answer</option>
                }

            </select>
            <input type="submit" value="Add FAQ" />
        </form>
    </div>

</div>

